<% provide :title, @title %>
<h1 class="text-center" ><span class="label label-success"><%= @title %></span></h1>

<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @items.each.with_index(1) do |item, index| %>
      <div class="item-box">
        <%= render 'items/item_img' , item: item, index: index %>
      </div>
    <% end %>
  </div>
</div>